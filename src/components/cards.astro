---
const { title, lista } = Astro.props;
---

<style>
  div {
    width: 25vw;
    min-width: 324px;
    height: 30rem;
    border-radius: 6px;
    background: #f3f2f2;
    box-shadow: 20px 20px 60px #cfcece, -20px -20px 60px #ffffff;
    border-left: 4px solid #ea834c;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
  }
  h2 {
    font-size: 3em;
    font-family: "Roboto Slab", serif;
    text-align: center;
  }
  li {
    margin: 0.9em 2.1em;
  }
  
</style>

<div>
  <h2>{title}</h2>
  <ul>
    {lista.map((item) => <li>{item}</li>)}
  </ul>
</div>
