<style>
  main {
    width: 100vw;
    height: 100vh;
  }
  h2 {
    font-size: 2.4em;
    margin-bottom: 0.7em;
  }
  nav {
    height: 4.6em;
    margin: 0 2.8em;
    display: flex;
    justify-items: center;
    align-items: center;
  }
  .back {
    display: block;
    width: 5.9em;
    text-align: center;
    text-decoration: none;
    color: white;
    font-weight: bold;
    background-color: #ea834c;
    padding: 0.8em 0.6em;
    border-radius: 30px;
  }
  .form {
    width: 100%;
    height: 70vh;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 3em;
  }

  form {
    width: 32%;
    height: 60vh;
    min-width: 320px;
    border: 3.2px solid black;
    border-radius: 20px;
    background: rgba(206, 168, 168, 0.095);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(10.5px);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.18);
  }
  form > * {
    display: block;
    text-align: center;
  }
  form > input {
    margin: 0 auto;
  }

  .google,
  .facebook {
    margin: 0 auto;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 20vw;
    min-width: 210px;
    height: 2.5rem;
    border-radius: 20px;
    text-decoration: none;
    color: black;
    cursor: pointer;
  }
  .google {
    background-color: white;
    margin-bottom: 1em;
  }
  .facebook {
    background-color: rgb(62, 62, 189);
  }

  .svg-google {
    position: relative;
    top: 1px;
    margin-right: 0.3em;
  }
  .svg-face {
    position: relative;
    top: 1px;
    margin-right: 0.3em;
  }
  .logo-emp {
    width: 100px;
    height: 50px;
    margin: 1em auto;
  }

  .inputs {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    margin-top: 1em;
    height: 28vh;
  }

  .form__group {
    position: relative;
    padding: 20px 0 0;
    margin-top: 10px;
    width: 100%;
    max-width: 220px;
  }

  .form__field {
    font-family: inherit;
    width: 100%;
    border: none;
    border-bottom: 2px solid #9b9b9b;
    outline: 0;
    font-size: 14px;
    color: #fff;
    padding: 7px 0;
    background: transparent;
    transition: border-color 0.2s;
  }

  .form__field::placeholder {
    color: transparent;
  }

  .form__field:placeholder-shown ~ .form__label {
    font-size: 14px;
    cursor: text;
    top: 20px;
  }

  .form__label {
    position: absolute;
    top: 0;
    display: block;
    transition: 0.2s;
    font-size: 14px;
    color: #000000;
    pointer-events: none;
  }

  .form__field:focus {
    padding-bottom: 6px;
    font-weight: 700;
    border-width: 3px;
    border-image: linear-gradient(to right, #ea834c, #ffb812);
    border-image-slice: 1;
  }

  .form__field:focus ~ .form__label {
    position: absolute;
    top: 0;
    display: block;
    transition: 0.2s;
    font-size: 14px;
    color: black;
    font-weight: 700;
  }

  /* reset input */
  .form__field:required,
  .form__field:invalid {
    box-shadow: none;
  }
  button {
    margin: 0 auto;
    cursor: pointer;
    font-weight: 700;
    font-family: Helvetica, "sans-serif";
    -webkit-transition: all 0.2s;
    transition: all 0.2s;
    padding: 5px 15px;
    border-radius: 100px;
    background: #ea834c;
    border: 1px solid transparent;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    font-size: 15px;
  }

  button:hover {
    background: #ffe960;
  }

  button > svg {
    width: 34px;
    margin-left: 10px;
    -webkit-transition: -webkit-transform 0.3s ease-in-out;
    transition: -webkit-transform 0.3s ease-in-out;
    transition: transform 0.3s ease-in-out;
    transition: transform 0.3s ease-in-out, -webkit-transform 0.3s ease-in-out;
  }

  button:hover svg {
    -webkit-transform: translateX(5px);
    -ms-transform: translateX(5px);
    transform: translateX(5px);
  }

  button:active {
    -webkit-transform: scale(0.95);
    -ms-transform: scale(0.95);
    transform: scale(0.95);
  }
  .btn-login{
    margin-top: 1.5em;
  }

  .recomend{
    text-align: center;
  }
</style>

