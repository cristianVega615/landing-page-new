---
import Switch from "./switch.astro";
import Menu from "./menu.astro";
---

<style>
  nav{
    width: 100%;
  }
  div{
    width: 100%;
    height: 3.4rem;
    display: flex;
    justify-content: space-around;
    align-items: center;
  }
  img {
    width: 190px;
    height: 40px;
  }
  .section {
    width: 30vw;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
  }
  .section > a {
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
  }
  .dropdown {

    width: max-content;
    position: relative;
  }
  .dropdown > a {
    color: white;
    text-decoration: none;
    font-size: 1.2rem;
  }
  .dropdown .temas {
    display: none;
    position: absolute;
    left: 1rem;
    bottom: -8.8rem;
    width: 12rem;
    height: max-content;
    border-radius: 9px;
    overflow: hidden;
    background-color: white;
    box-shadow: 2px 2px 5px rgba(0, 0, 0);
  }
  .dropdown:hover .temas {
    display: block;
  }
  ul {
    padding: 0;
    margin: 0;
    list-style: none;
    text-align: left;
  }
  li a {
    color: black;
    display: block;
    padding: 9px;
    text-decoration: none;
  }
  li a:hover {
    background-color: #ea834c;
    color: white;
  }
  .menu{
    position: fixed;
    z-index: 999;
    bottom: 1vh;
    right: 1vw;
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #efca6e;
    visibility: hidden;
    border: solid 4px black;
  }
  @media screen and (max-width:63rem){
    .section{
      display: none;
    }
    div{
      justify-content: space-between;
    }
  }
</style>

<nav>
  <div>
    <img src="/couchbase.svg" alt="">
    <div class="section">
      <a href="/login">Iniciar Sesi√≥n</a>
      <div class="dropdown">
        <a href="#">Temas</a>
        <div class="temas">
          <ul>
            <li><a href="#hosting-share">Hosting Compartido</a></li>
            <li><a href="#server-private">Servidores Privados</a></li>
            <li><a href="#server-dedicated">Servidores Dedicados</a></li>
            <li><a href="#server-cloud">Serivodres Cloud</a></li>
          </ul>
        </div>
      </div>
      <Switch/>
    </div>
    <Menu class="menu"/>
  </div>
</nav>


